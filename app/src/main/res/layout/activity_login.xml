    <LinearLayout
        android:id="@+id/linearLayout_loginUser"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        android:elevation="2dp"
        android:gravity="center|start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_userlogin_start"
            android:text="   로그인"
            android:textColor="#454545"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_createUser"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_preView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_createuser"
            android:text="   아이디 만들기"
            android:textColor="#454545"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_findUser"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_createUser">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_usersearch"
            android:text="   비밀번호 찾기"
            android:textColor="#454545"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_preView"
        android:layout_width="260dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_loginUser">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_userlogin_start"
            android:text="   둘러보기"
            android:textColor="#454545"
            android:textSize="16dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView_servicePolicy"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
