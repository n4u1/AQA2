<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="1dp">

    <LinearLayout
        android:id="@+id/suggest_linearLayout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/imageView_userClass"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"/>


            <TextView
                android:id="@+id/textView_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_toRightOf="@id/imageView_userClass"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLength="20"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/textView_userName"
                android:maxLines="1"
                android:textColor="#737373" />

            <TextView
                android:id="@+id/textView_replyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView_title"
                android:text=" [5]" />

        </RelativeLayout>





    </LinearLayout>


</android.support.v7.widget.CardView>