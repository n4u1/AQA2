<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/TextLabel"
    tools:context=".views.SuggestDetailActivity">

    <include layout="@layout/mytoolbar" />




    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54dp"
            android:orientation="vertical"
            android:padding="16dp">


            <!--제목-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/suggestDetailActivity_textView_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.5"
                    android:textSize="20dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <!--업로더 아이디-->
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="게시자  :"
                    android:textColor="#636363"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/suggestDetailActivity_imageView_userClass"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5" />

                <TextView
                    android:id="@+id/suggestDetailActivity_textView_userId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9.5"
                    android:textColor="#636363"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <!--게시글번호-->
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="글번호  :"
                    android:textColor="#636363"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/suggestDetailActivity_textView_contentId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textColor="#636363"
                    android:textSize="12dp" />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <!--시간-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/suggestDetailActivity_textView_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#636363"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <!--내용-->

            <TextView
                android:id="@+id/suggestDetailActivity_textView_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <!--좋아요, 투표수, 공유-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/suggestDetailActivity_imageView_like"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_outline_thumb_up_24px" />

                <TextView
                    android:id="@+id/suggestDetailActivity_textView_likeCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="5"
                    android:text="2291"
                    android:textColor="#737373"
                    android:textSize="14dp" />


                <ImageView
                    android:id="@+id/suggestDetailActivity_imageView_reply"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_replyicon_black" />

                <TextView
                    android:id="@+id/suggestDetailActivity_textView_replyCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="5"
                    android:text="2291"
                    android:textColor="#737373"
                    android:textSize="14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />


            <!--스샷 이미지-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/suggestDetailActivity_imageView_userAddContent_1"
                    android:layout_width="match_parent"
                    android:layout_height="392dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="center"
                    android:visibility="gone" />
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/suggestDetailActivity_imageView_userAddContent_2"
                    android:layout_width="match_parent"
                    android:layout_height="392dp"
                    android:layout_below="@id/suggestDetailActivity_imageView_userAddContent_1"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="center"
                    android:visibility="gone" />

            </RelativeLayout>






            <!--댓글 리스트-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/suggestDetailActivity_recyclerView_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef" />

            <!--댓글 달기-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="60dp">

                <EditText
                    android:id="@+id/suggestDetailActivity_editText_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="댓글..."
                    android:textSize="16dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/suggestDetailActivity_button_replySend"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="9"
                    android:src="@drawable/ic_play_triangle_1"
                    android:visibility="visible" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>